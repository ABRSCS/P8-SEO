{
  "port": 5500,
  "host": "127.0.0.1",
  "root": "./",
  "open": true,
  "file": "index.html",
  "wait": 1000,
  "mount": [],
  "logLevel": 2,
  "middleware": [
    {
      "name": "compression",
      "options": {
        "level": 6,
        "threshold": 1024,
        "filter": function(req, res) {
          if (req.headers['accept-encoding'] && req.headers['accept-encoding'].includes('gzip')) {
            return true;
          }
          return false;
        }
      }
    },
    function(req, res, next) {
      // DÃ©sactiver les WebSockets
      if (req.headers.upgrade && req.headers.upgrade.toLowerCase() === 'websocket') {
        res.writeHead(403);
        res.end('WebSockets are not allowed');
        return;
      }
      next();
    }
  ]
} 